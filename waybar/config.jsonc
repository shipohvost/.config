    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
    ],
    "modules-center": [
        "sway/window",
    ],
    "modules-right": [
        "sway/mode",
        "tray",
        "sway/scratchpad",
        "pulseaudio",
        "network",
        "backlight",
        "battery",
        "clock",
        "sway/language",
        "idle_inhibitor"
    ],

